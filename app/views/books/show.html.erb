<div class="container">
  <div class="row">
<div class="col-lg-4"><%= render 'form', book: @book_new ,user: @user %></div>

<div class="col-lg-8">
<h1>Book detail</h1>
<div class="table table-hover">
  <tbody>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <%= link_to user_path(@user.id) do %>
          <%= @user.name %>
          <% end %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success"%>
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか?", class:"btn btn-danger"%>
          <% end %>
      </td>
    </tr>
  </tbody>
</div>
</div>
