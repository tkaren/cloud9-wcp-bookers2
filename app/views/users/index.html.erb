<div class="container">
  <div class="row">
   <div class="col-lg-4"><%= render 'books/form', book: @book ,user: @user %></div>

<div class="col-lg-8">
<h1>Users</h1>
<table class="table">
    <thead>
      <tr><th>image</th><th>name</th><th></th></tr>
    </thead>
      <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    <% end %>
    </tr>
</table>
</div>

</div>
</div>