<h1>Users</h1>

<thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

<% @users.each do |user| %>
<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <p><%= user.name %></p>
</div>

<%= link_to "Show", user_path(user.id) %>
<% end %>