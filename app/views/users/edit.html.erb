  <% @user.errors.full_messages.each do |message| %>
    <div class="form-error">
       <%= message %>
    </div>
  <% end %>
<% end %>


<div class="container">
  <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form group">
      <label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName" %>
      </div>
      <div class="form group">
      <label for="inputImage">Image</label>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div class="form group">
      <label for="inputIntroduction">Introduction</label>
      <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
      </div>
      <%= f.submit "Update User", class: 'col-xs-12 btn btn-secondary' %>
<% end %>
  </div>
  </div>
</div>

